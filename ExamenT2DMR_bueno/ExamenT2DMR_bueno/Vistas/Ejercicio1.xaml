<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenT2DMR_bueno.Vistas.Ejercicio1"
             Title="Página Principal">
    <VerticalStackLayout>
        <Image
            Aspect="AspectFill"
            Source="bienvenido.jpg"/>

        <Label 
            Text="¡Bienvenido a tienda!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <HorizontalStackLayout HorizontalOptions="Center" Padding="20" Spacing="20">
            <Button
                x:Name="btnProductos"
                Text="Productos"
                Clicked="onProductosClicked"
                />
            <Button
                x:Name="btnAcercaDe"
                Text="Acerca de..."
                />
            <Button
                x:Name="btnRegistro"
                Text="Registro"
                Clicked="onRegistroClicked"
                />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>